{{#each model.Tables}}
CREATE TABLE {{Name}} (
{{#each Columns}}
    {{Name}} {{dbtype TypeValue ~}}
    {{#if Length}}({{Length}}){{/if~}}
    {{#if Precision}}({{Precision}}, {{Scale}}){{/if~}}
    {{#if IsNullable}} NULL{{/if~}}
    {{#if HasDefaultValue}} DEFAULT {{DefaultValue}}{{/if~}}
    {{#unless @last}},{{/unless}}
{{/each}}
{{#if PrimaryKey}}
    , CONSTRAINT PK_{{Name}} PRIMARY KEY (
{{~ #each PrimaryKey.Columns}}
{{Name}}{{#unless @last}}, {{/unless~}}
{{/each~}}
)
{{/if~}}
);
{{/each}}
